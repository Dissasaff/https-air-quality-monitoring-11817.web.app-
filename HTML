    <!-- Firebase App (the core Firebase SDK) -->
    <script type="module">
        // Import the functions you need from the SDKs you need
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.1/firebase-app.js";
        import { getDatabase, ref, onValue } from "https://www.gstatic.com/firebasejs/10.12.1/firebase-database.js";
      
        // Your web app's Firebase configuration
        const firebaseConfig = {
          apiKey: "AIzaSyAOMB4_h--iZSRHGhohBwFTYOzhbK3NDEo",
          authDomain: "air-quality-monitoring-11817.firebaseapp.com",
          databaseURL: "https://air-quality-monitoring-11817-default-rtdb.asia-southeast1.firebasedatabase.app",
          projectId: "air-quality-monitoring-11817",
          storageBucket: "air-quality-monitoring-11817.appspot.com",
          messagingSenderId: "382482534926",
          appId: "1:382482534926:web:b8027718407dc2178f225f"
        };
      
        // Initialize Firebase
        const app = initializeApp(firebaseConfig);
        const database = getDatabase(app);

        // Reference to NO2 data in the database
        const no2Ref = ref(database, 'nilai_NO2');

        // Fetch and display NO2 data
        onValue(no2Ref, (snapshot) => {
          const no2Value = snapshot.val();
          document.getElementById('no2-value').innerText = no2Value;
        });

        // Reference to CO data in the database
        const coRef = ref(database, 'nilai_CO');

        // Fetch and display CO data
        onValue(coRef, (snapshot) => {
          const coValue = snapshot.val();
          document.getElementById('co-value').innerText = coValue;
        });

        // Reference to PM2.5 data in the database
        const pm25Ref = ref(database, 'nilai_PM25');

        // Fetch and display PM2.5 data
        onValue(pm25Ref, (snapshot) => {
          const pm25Value = snapshot.val();
          document.getElementById('pm25-value').innerText = pm25Value;
        });


        const statpm25Ref = ref(database, 'LED_Status_PM25');

        // Fetch and display PM2.5 data
        onValue(statpm25Ref, (snapshot) => {
          const statpm25Value = snapshot.val();
          document.getElementById('statpm25-value').innerText = statpm25Value;
        });


        const statcoRef = ref(database, 'LED_Status_CO');

        // Fetch and display CO data
        onValue(statcoRef, (snapshot) => {
          const statcoValue = snapshot.val();
          document.getElementById('statco-value').innerText = statcoValue;
        });


        const statno2Ref = ref(database, 'LED_Status_NO2');

        // Fetch and display NO2 data
        onValue(statno2Ref, (snapshot) => {
          const statno2Value = snapshot.val();
          document.getElementById('statno2-value').innerText = statno2Value;
        });


        
    </script>

